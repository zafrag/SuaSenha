        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Incluso: 21:12:35"
        android:id="@+id/hora"
        android:layout_below="@+id/idSenha"
        android:layout_centerHorizontal="true"
        />
